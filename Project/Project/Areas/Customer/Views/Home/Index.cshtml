@model IEnumerable<SanPham>
<div class="row">
    @foreach (var item in @Model)
    {
        <div class="col-3 p-3 d-flex">
            <div class="card h-100" style="width: 100%; border-radius: 5px;">
                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name">
                <div class="card-body d-flex flex-column">
                    <h4 class="card-title text-danger">@item.Price</h4>
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <div class="row mt-auto">
                        <div class="col-6">
                            <a href="#" class="btn btn-primary">Thêm &#10084;</a>
                        </div>
                        <div class="col-6">
                            <a href="#" class="btn btn-danger">Mua Hàng</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>